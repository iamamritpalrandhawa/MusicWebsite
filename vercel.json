{
    "builds": [
        {
            "src": "index.js",
            "use": "@vercel/node"
        },
        {
            "src": "build/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "index.js"
        },
        {
            "src": "/(.+)",
            "dest": "build/$1"
        },
        {
            "src": "/",
            "build": "build/index.html"
        }
    ]
}